
rm -rf *

#minimal install
apt update && apt install sudo wget unzip curl -y && yes root | passwd root && sudo DEBIAN_FRONTEND=noninteractive apt install tzdata keyboard-configuration -y && sudo apt install thunar mate-terminal icewm firefox xarchiver -y && wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/base.7z https://dl.google.com/linux/direct/chrome-remote-desktop_current_amd64.deb && sudo apt install -y ./*.deb && rm *.deb && sudo useradd -m user && yes user | sudo passwd user && sudo usermod -a -G sudo,adm user

#chrome_remote_desktop 
wget https://dl.google.com/linux/direct/chrome-remote-desktop_current_amd64.deb && sudo apt install -y ./*.deb && rm *.deb 



#ngrok
wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/ngrok.sh && bash ngrok.sh

#xrdp
apt install xrdp -y && wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/xrdp.sh && bash xrdp.sh \
&& killall ngrok && ./ngrok tcp 3389

#netcat-ngrok install
sudo apt update && sudo apt install netcat -y && wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/xrdp.sh && bash xrdp.sh \
&& killall ngrok && ./ngrok tcp 10000

#netcat listen
echo " nc -lv 10000 && bash b.sh " > b.sh && bash b.sh


#ttyd 
printf "root" | su root -c " sudo apt-get install build-essential cmake git libjson-c-dev libwebsockets-dev && \
git clone https://github.com/tsl0922/ttyd.git && \
cd ttyd && mkdir build && cd build && \
cmake .. && \
make && make install "

#base.7z
wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/base.7z

            
#docker
sudo apt update && apt install docker.io
snap install docker
docker run -it ghcr.io/amitstudydude/gitpod-ubuntu-20.04:latest
#docker  run -it -p 6080:6080 ghcr.io/amitstudydude/gitpod-ubuntu-20.04:latest

#autoclick.sh
sudo apt update && sudo apt install xdotool gedit -y 
xdotool getmouselocation
wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/autoclick.sh && bash autoclick.sh





