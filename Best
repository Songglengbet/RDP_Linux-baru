


rm -rf *

#minimal install
apt update && apt install sudo wget unzip curl -y && yes root | passwd root && yes root | passwd gitpod && sudo DEBIAN_FRONTEND=noninteractive apt install tzdata keyboard-configuration -y && sudo apt install thunar mate-terminal icewm firefox xarchiver -y && wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/base.7z https://dl.google.com/linux/direct/chrome-remote-desktop_current_amd64.deb && sudo apt install --assume-yes --fix-broken ./*.deb && rm *.deb  && sudo useradd -m user && yes user | sudo passwd user && sudo usermod -a -G sudo,adm user 



#ngrok
wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/ngrok.sh && bash ngrok.sh

#xrdp
apt install xrdp -y && wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/xrdp.sh && bash xrdp.sh





#base.7z
wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/base.7z

            
